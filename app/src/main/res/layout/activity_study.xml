<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudyActivity">

    <LinearLayout
        android:id="@+id/action_bar_study"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/NavBar">

        <ImageView
            android:id="@+id/back_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/titleCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60px"
            android:text="HCI test 2"
            android:textColor="@color/White"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20px">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatarUserCourse"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/cuong" />

                <TextView
                    android:id="@+id/nameUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="vuvancuong29"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="|" />

                <TextView
                    android:id="@+id/total_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="30 thuật ngữ"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="80px"
                    android:layout_marginLeft="250px"
                    android:src="@drawable/deleteee" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:paddingLeft="50px"
                android:paddingRight="20px"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/hengio"
                    android:layout_width="40px"
                    android:layout_height="70px"
                    android:layout_weight="2"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/display_time"
                    android:layout_width="170px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_weight="6"

                    android:text=""
                    android:textColor="#057AD6"
                    android:textSize="17dp" />

                <ImageView
                    android:id="@+id/close_Hen_Gio"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_weight="2"
                    android:src="@drawable/closeeee" />

                <ImageView
                    android:id="@+id/accep_Hen_Gio"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginRight="50px"
                    android:layout_weight="2"
                    android:src="@drawable/accept1" />

                <ImageView
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_weight="2"

                    android:src="@drawable/edit" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:padding="20px"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_weight="1"
                    android:background="@drawable/duongvien_goctron"
                    android:orientation="vertical"
                    android:padding="20px"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        android:src="@drawable/hoc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Học"
                        android:textColor="#117A72"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_height="150px"
                    android:layout_weight="1"
                    android:background="@drawable/duongvien_goctron"
                    android:orientation="vertical"
                    android:padding="20px"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/kiemtra" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Kiểm tra"
                        android:textColor="#117A72"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theghinho"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_weight="1"
                    android:layout_marginRight="10px"
                    android:background="@drawable/duongvien_goctron"
                    android:orientation="vertical"
                    android:padding="20px"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/hoc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Thẻ ghi nhớ"
                        android:textColor="#117A72"
                        android:textSize="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ghepthe"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_weight="1"
                    android:background="@drawable/duongvien_goctron"
                    android:orientation="vertical"
                    android:padding="20px"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ghepthe" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Ghép thẻ"
                        android:textColor="#117A72"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/checkHocAll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90px"
                        android:gravity="center"
                        android:text="Học tất cả"
                        android:textSize="20sp" />

                    <View
                        android:id="@+id/checkHocTatCa"
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        android:background="#1B74D3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/checkHocSaoNgoai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90px"
                        android:gravity="center"
                        android:text="Học 8"
                        android:textSize="20sp" />

                    <View
                        android:id="@+id/checkHocSao"
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        android:background="#E8E8E3" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="12">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ryce_study"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>